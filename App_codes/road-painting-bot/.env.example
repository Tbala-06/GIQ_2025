# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Inspector Authorization
# Comma-separated list of Telegram user IDs who can access inspector mode
# Leave empty to allow anyone to be an inspector (for testing only)
# Example: INSPECTOR_CHAT_IDS=123456789,987654321
INSPECTOR_CHAT_IDS=

# Database Configuration
DATABASE_URL=sqlite:///road_painting.db
DATABASE_PATH=road_painting.db

# Security
# Generate a random secret key for sessions
SECRET_KEY=1234

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Webhook Configuration (for production deployment)
WEBHOOK_ENABLED=False
WEBHOOK_URL=
WEBHOOK_PORT=8443

# EV3 Robot Configuration
# Set EV3 IP address for robot control
# Leave empty for auto-detection on usb0 interface
# Example: EV3_IP_ADDRESS=169.254.14.120
EV3_IP_ADDRESS=

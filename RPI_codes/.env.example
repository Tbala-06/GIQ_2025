# Robot Identification
ROBOT_ID=robot_001
ROBOT_NAME=PaintBot Alpha

# MQTT Broker Configuration
MQTT_BROKER=test.mosquitto.org
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_COMMANDS=bot/commands/deploy
MQTT_TOPIC_STATUS=robot/status
MQTT_TOPIC_COMPLETE=robot/job/complete

# MTi IMU/GPS Sensor Configuration
MTI_SERIAL_PORT=/dev/serial0
MTI_BAUDRATE=115200

# Motor Controller (L298N) GPIO Pins
MOTOR_LEFT_PWM=12
MOTOR_LEFT_DIR1=16
MOTOR_LEFT_DIR2=20
MOTOR_RIGHT_PWM=13
MOTOR_RIGHT_DIR1=19
MOTOR_RIGHT_DIR2=26

# Stencil Servo GPIO Pin
STENCIL_SERVO_PIN=18

# Paint Dispenser GPIO Pin
PAINT_DISPENSER_PIN=23

# GPS and Navigation Parameters
GPS_ACCURACY_THRESHOLD=5.0
ARRIVAL_TOLERANCE_METERS=2.0
MAX_ROAD_SEARCH_DISTANCE=50.0
ROAD_ALIGNMENT_TOLERANCE_DEGREES=5.0

# Paint Dispensing Parameters
PAINT_DISPENSE_DURATION=5.0

# Status Reporting
STATUS_REPORT_INTERVAL=10.0

# Mission Parameters
MAX_MISSION_DURATION=300.0

# Safety Parameters
MIN_GPS_SATELLITES=4
MIN_BATTERY_LEVEL=20
MAX_TILT_ANGLE=30
EMERGENCY_STOP_PIN=21

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/home/pi/robot.log

# GeoJSON Road Data
GEOJSON_ROADS_FILE=./data/roads.geojson
